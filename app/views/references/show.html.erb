<%- model_class = Reference -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @reference.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cant) %>:</strong></dt>
  <dd><%= @reference.cant %></dd>
  <dt><strong><%= model_class.human_attribute_name(:talle) %>:</strong></dt>
  <dd><%= @reference.talle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @reference.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              references_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reference_path(@reference), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reference_path(@reference),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
