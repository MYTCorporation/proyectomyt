<%= simple_form_for @reference, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@reference[:name]) %>
  <%= f.input :cant %>
  <%= error_span(@reference[:cant]) %>
  <%= f.input :talle %>
  <%= error_span(@reference[:talle]) %>
  <%= f.input :description %>
  <%= error_span(@reference[:description]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                references_path, :class => 'btn btn-default' %>
<% end %>
