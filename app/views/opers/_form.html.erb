<%= simple_form_for [@group,@oper], :html => { :class => 'form-horizontal' } do |f| %>
<div class="field">
  <%= f.label :Documento %><br>
  <%= f.text_field :document_id %>
  <%= error_span(@oper[:document_id]) %>
</div>
<div class="field">  
  <%= f.label :Numero_documento %><br>
  <%= f.text_field :number_document %>
  <%= error_span(@oper[:number_document]) %>
</div>
<div class="field">  
  <%= f.label :Nombres %><br>
  <%= f.text_field :name %>
  <%= error_span(@oper[:name]) %>
</div>
<div class="field">  
  <%= f.label :Apellidos %><br>
  <%= f.text_field :last_name %>
  <%= error_span(@oper[:last_name]) %>
</div>
<div class="field"> 
  <%= f.label :Lineas %><br>
  <%= f.text_field :online_id %>
  <%= error_span(@oper[:online_id]) %>
</div>
<div class="field">
  <%= f.label :Direccion %><br>  
  <%= f.text_field :direccion %>
  <%= error_span(@oper[:direccion]) %>
</div>
<div class="field">
  <%= f.label :Email %><br>
  <%= f.text_field :email %>
  <%= error_span(@oper[:email]) %>
</div>
<div class="field"> 
  <%= f.label :Telefono %><br> 
  <%= f.text_field :telephone %>
  <%= error_span(@oper[:telephone]) %>
</div>  
  <%= f.label :Formacion %><br>
  <%= f.text_field :type_formation %>
  <%= error_span(@oper[:type_formation]) %>
<div class="field">  
  <%= f.label :Fecha_Inicio %><br>
  <%= f.text_field :date_home, class: 'datepicker' %>
  <script type="text/javascript">
      $('.datepicker').datepicker({
        language: "es",
        format: "yyyy/mm/dd",
        keyboardNavigation: false,
        forceParse: false,
        autoclose: true,
        todayHighlight: true
      });
  </script>
  <%= error_span(@oper[:date_home]) %>
</div>
<div class="field"> 
  <%= f.label :Fecha_fin %><br> 
  <%= f.text_field :date_end, class: 'datepicker' %>
  <script type="text/javascript">
      $('.datepicker').datepicker({
        language: "es",
        format: "yyyy/mm/dd",
        keyboardNavigation: false,
        forceParse: false,
        autoclose: true,
        todayHighlight: true
      });
  </script>
  <%= error_span(@oper[:date_end]) %>
</div>
<div class="field"> 
  <%= f.label :Grupo %><br> 
  <%= f.text_field :group_id %>
  <%= error_span(@oper[:group_id]) %>
</div>  
<div class="actions">
  <%= f.button :submit, "Crear", :class => 'btn-primary' %>
  <%= link_to t('.cancelar'),
                group_opers_path(@group), :class => 'btn btn-default' %>
</div>               
<% end %>
